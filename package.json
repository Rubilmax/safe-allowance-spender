    "url": "https://github.com/rubilmax"
  },
  "license": "MIT",
  "main": "function/index.js",
  "files": [
    "function/*"
  ],
  "scripts": {
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "build": "hardhat compile --force && tsc --build ./tsconfig.build.json",
    "test": "hardhat test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rubilmax/safe-allowance-spender.git"
  },
  "bugs": {
    "url": "https://github.com/Rubilmax/safe-allowance-spender/issues"
  },
  "keywords": [
    "safe",
    "wallet",
    "allowance",
    "spending",
    "limit",
    "owner",
    "webhook"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/aws-lambda": "^8.10.138",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.ts": "prettier"
  },
  "config": {
