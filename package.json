{
  "name": "safe-allowance-spender",
  "version": "1.0.0",
  "author": {
    "name": "Romain (Rubilmax) Milon",
    "email": "rmilon@gmail.com",
    "url": "https://github.com/rubilmax"
  },
  "license": "MIT",
  "main": "function/index.js",
  "files": [
    "function/*"
  ],
  "scripts": {
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "prebuild": "rm -rf dist",
    "build": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outfile=dist/index.js",
    "postbuild": "cd dist && zip -r index.zip index.js*",
    "deploy": "aws lambda update-function-code --function-name safe-allowance-spender --zip-file fileb://dist/index.zip"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rubilmax/safe-allowance-spender.git"
  },
  "bugs": {
    "url": "https://github.com/Rubilmax/safe-allowance-spender/issues"
  },
  "keywords": [
    "safe",
    "wallet",
    "allowance",
    "spending",
    "limit",
    "owner",
    "webhook"
  ],
  "dependencies": {
    "@safe-global/api-kit": "^2.4.1",
    "viem": "^2.13.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/aws-lambda": "^8.10.138",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.21.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.ts": "prettier"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "importOrder": [
      "^viem",
      "^\\."
    ],
    "importOrderSeparation": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ]
  }
}
